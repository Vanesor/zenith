{
  "name": "zenith",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:migrate": "prisma migrate deploy",
    "db:reset": "prisma migrate reset",
    "db:setup:supabase": "node scripts/setup-supabase-schema.js",
    "db:verify:supabase": "node scripts/verify-supabase-schema.js",
    "cache:flush": "node -e \"require('./src/lib/CacheManager.js').CacheManager.clearPattern('*')\"",
    "health:check": "node scripts/health-check.js",
    "metrics:export": "node scripts/export-metrics.js",
    "production:build": "npm run type-check && npm run lint && npm run build",
    "production:start": "NODE_ENV=production npm run start",
    "production:pm2": "pm2 start ecosystem.config.js",
    "docker:build": "docker build -t zenith-forum .",
    "docker:run": "docker run -p 3000:3000 zenith-forum",
    "mobile:setup:ubuntu": "cd mobile && ./setup-ubuntu.sh",
    "mobile:setup:windows": "echo 'Please follow the setup guide in mobile/setup-windows.md'",
    "mobile:init": "cd mobile && npx react-native init ForumClubMobile --template react-native-template-typescript",
    "mobile:android": "cd mobile/ForumClubMobile && npm run android",
    "mobile:ios": "cd mobile/ForumClubMobile && npm run ios"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@headlessui/react": "^2.2.6",
    "@prisma/client": "^6.12.0",
    "@supabase/supabase-js": "^2.52.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/ioredis": "^4.28.10",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/pg": "^8.15.4",
    "@types/socket.io": "^3.0.1",
    "bcryptjs": "^3.0.2",
    "bufferutil": "^4.0.9",
    "dotenv": "^17.2.1",
    "framer-motion": "^12.23.9",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^4.0.0",
    "lucide-react": "^0.525.0",
    "next": "15.4.4",
    "next-auth": "^4.24.11",
    "pg": "^8.16.3",
    "prisma": "^6.12.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "utf-8-validate": "^5.0.10"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@react-native-community/cli": "^19.1.1",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "eslint": "^9",
    "eslint-config-next": "15.4.4",
    "react-native": "^0.80.2",
    "tailwindcss": "^4",
    "tsx": "^4.20.3",
    "typescript": "^5"
  },
  "optionalDependencies": {
    "lightningcss-linux-x64-gnu": "^1.30.1"
  }
}
